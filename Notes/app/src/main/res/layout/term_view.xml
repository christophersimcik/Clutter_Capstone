<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="25dp">


    <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#EAE17F"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/term_white" />

            <TextView
                android:id="@+id/note_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="TERMS:"
                android:textColor="#FFFFFF"
                android:textIsSelectable="true"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:id="@+id/title_layout">
            <View
                android:layout_width="25dp"
                android:layout_height="1dp"
                android:background="@color/textCol"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|left"
                android:paddingLeft="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/term"
                android:id="@+id/term_display"
                android:textSize="20sp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                />
            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="@color/textCol"
                android:layout_weight="8"
                android:layout_gravity="center_vertical|right"
                android:paddingLeft="0dp" />

            <ImageView
                android:id="@+id/google_book_select"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/book_icon_deselect" />

        </LinearLayout>


            <EditText
                android:id="@+id/term_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="textAutoCorrect"
                android:singleLine="true"
                android:textSize="20sp" />



        <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/textCol"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical|left"
                        android:layout_marginBottom="0dp" />


            <com.clutter.note.main.SubmitView
            android:layout_width="100dp"
            android:layout_height="10dp"
                android:id="@+id/submitter"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center">

               <com.clutter.note.main.CircleText
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:id="@+id/submit_button"
                   android:layout_gravity="center"
                   android:textSize="12sp" />

            </LinearLayout>
            <com.clutter.note.main.SubmitViewR
                android:layout_width="100dp"
                android:layout_height="10dp"
                android:id="@+id/submitter_r"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />


            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:background="@color/textCol" />

        </LinearLayout>

            </LinearLayout>

</RelativeLayout>